{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"isolatedModules": true,
		"outDir": "./dist",
		"rootDir": "."
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}