{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"isolatedModules": true
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}